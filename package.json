{
  "name": "electron-react-typescript-prettier-boilerplate",
  "version": "1.0.0",
  "description": "Pre-configured boilerplate for Electron + React + TypeScript",
  "main": "./dist/main.bundle.js",
  "scripts": {
    "start": "electron ./dist/main.bundle.js",
    "dev": "rimraf dist && cross-env NODE_ENV=development webpack --watch --progress --colors",
    "prod": "rimraf dist && cross-env NODE_ENV=production webpack --progress --colors",
    "build:mac": "electron-builder --macos",
    "lint": "tsc --noEmit && eslint src/**/*.ts{,x}"
  },
  "author": "Pedro Alvito",
  "license": "MIT",
  "dependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/node": "12",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router": "^5.1.8",
    "@types/react-router-dom": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "copy-pkg-json-webpack-plugin": "0.0.39",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "electron": "^11.1.0",
    "electron-builder": "^22.9.1",
    "eslint": "7.15.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^4.4.1",
    "lodash": "^4.17.15",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "source-map-loader": "^1.1.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^8.0.3",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.2",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedrotari7/electron-react-typescript-prettier-boilerplate"
  },
  "homepage": "https://github.com/pedrotari7/electron-react-typescript-prettier-boilerplate#readme"
